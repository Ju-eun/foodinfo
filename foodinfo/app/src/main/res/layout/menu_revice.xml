<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/menu_modify_LLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@color/black"
        android:layout_margin="5dp"
        android:id="@+id/menu_modify_iv_menu"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/menu_modify_et_menuName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu_name"
            android:layout_margin="5dp"/>

        <EditText
            android:id="@+id/menu_modify_et_menuprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"
            android:layout_margin="5dp"/>

    </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/menu_iv_modifybtn"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이미지 변경"
        android:layout_below="@id/menu_modify_LLayout" />

    <Button
        android:id="@+id/menu_modifyOKbtn"
        android:text="변경하기"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu_iv_modifybtn"/>

    <Button
        android:id="@+id/menu_modifyCancelbtn"
        android:text="취소 "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu_modifyOKbtn"/>

</RelativeLayout>


